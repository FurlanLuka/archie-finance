{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@archie-microservices/api-interfaces/*": ["libs/api-interfaces/src/*"],
      "@archie-microservices/auth0": ["libs/auth0/src/index.ts"],
      "@archie-microservices/config": ["libs/config/src/index.ts"],
      "@archie-microservices/crypto": ["libs/crypto/src/index.ts"],
      "@archie-microservices/health": ["libs/health/src/index.ts"],
      "@archie-microservices/internal-api": ["libs/internal-api/src/index.ts"],
      "@archie-microservices/openapi": ["libs/openapi/src/index.ts"],
      "@archie-microservices/sendgrid": ["libs/sendgrid/src/index.ts"],
      "@archie-microservices/vault": ["libs/vault/src/index.ts"],
      "@archie/api/user/constants": ["libs/api/user/constants/src/index.ts"],
      "@archie/api/referral-system/constants": ["libs/api/referral-system/constants/src/index.ts"],
      "@archie/api/onboarding/constants": ["libs/api/onboarding/constants/src/index.ts"],
      "@archie/api/credit/constants": ["libs/api/credit/constants/src/index.ts"],
      "@archie/api/asset-price/constants": ["libs/api/asset-price/constants/src/index.ts"],
      "@archie/api/collateral/constants": ["libs/api/collateral/constants/src/index.ts"],
      "@archie/api/utils/microservice": [
        "libs/api/utils/microservice/src/index.ts"
      ],
      "@archie/plugin/deployment": ["libs/plugin-deployment/src/index.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "tmp",
    "dist",
    "**/*spec.ts",
    "**/__data__",
    "**/__mocks__"
  ]
}
