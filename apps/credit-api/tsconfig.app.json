{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node", "../../node_modules/@rizefinance/types/"],
    "emitDecoratorMetadata": true,
    "target": "es2015"
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__data__",
    "**/__mocks__",
    "test"
  ],
  "include": [
    "**/*.ts"
  ]
}
