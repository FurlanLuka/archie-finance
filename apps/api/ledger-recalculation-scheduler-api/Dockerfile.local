FROM node:16-alpine as builder
WORKDIR /service

ARG LOCAL

COPY . /service

ENV NX_DAEMON=false

RUN npm i --ignore-scripts
RUN npx nx run ledger-recalculation-scheduler-api:build --skip-nx-cache
RUN if [ "$LOCAL" != "" ] ; then cp apps/api/ledger-recalculation-scheduler-api/.env dist/apps/api/ledger-recalculation-scheduler-api ; fi
RUN npm prune --production

FROM node:16-alpine

ARG LOCAL

WORKDIR /service

COPY --from=builder /service/package*.json /service/
COPY --from=builder /service/node_modules/ /service/node_modules/
COPY --from=builder /service/dist/apps/api/ledger-recalculation-scheduler-api /service/dist/

RUN if [ "$LOCAL" != "" ] ; then cp ./dist/.env ./ ; fi

USER node

CMD ["node", "dist/main.js"]
